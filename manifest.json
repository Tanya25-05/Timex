{
  "manifest_version": 3,
  "name": "Web Page Timer",
  "version": "1.0",
  "description": "Track time spent on active tabs",
  "permissions": ["storage", "tabs", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}